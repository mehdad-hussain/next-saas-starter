{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "!**/*",
    "node_modules",
    ".next",
    "public"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  }
}